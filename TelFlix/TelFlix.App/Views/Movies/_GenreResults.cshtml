@model MovieIndexViewModel

<ul class="pagination">
    <li class="page-item">
        <a class="page-link" id="prevPage" @*href="/Movies/GetGenreMovies?genre=@Model.GenreId&page=@Model.PreviousPage"*@ aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>

    <li class="page-item">
        <a class="page-link" id="nextPage" @*href="/Movies/GetGenreMovies?genre=@Model.GenreId&page=@Model.NextPage"*@ aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                ReleaseDate
            </th>
            <th>
                Rating
            </th>
            <th>
                Genres
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    @movie.Title
                </td>
                <td>
                    @movie.ReleaseDate
                </td>
                <td>
                    @movie.Rating
                </td>
                <td>
                    @(string.Join(", ", movie.Genres.Select(g => g.Name)))
                </td>
                <td>
                    @*TODO add movie id*@
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">Details</a>
                    @if (User.IsInRole("Moderator"))
                    {
                        <a asp-area="Moderator" asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id" role="button" class="btn btn-warning">Edit</a>
                        <a asp-area="Moderator" asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" role="button" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


