@model TelFlix.Data.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h2>Movie details</h2>

<img src="@Model.MediumImageUrl" alt="Poster" />

<p>@Model.Title</p>

<iframe width="300" height="200" src="@Model.TrailerUrl" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
