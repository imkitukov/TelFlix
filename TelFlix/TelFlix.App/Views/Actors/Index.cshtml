@model IEnumerable<TelFlix.Services.Models.Actors.ListActorModel>

@{
    ViewData["Title"] = "All Actors";
    int counter = 1;
}
<h2>AllActors</h2>

<table class="table" border="1">
    <thead class="thead-dark">
        <tr>
            <th scope="col" width="1%"><strong>#</strong></th>
            <th scope="col" width="30%"><strong>Name</strong></th>
            <th scope="col"><strong>Movies</strong></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var actor in Model)
        {
            <tr>
                <th scope="row">@(counter++)</th>
                <td scope="row">
                    <img class="actor-image" src="@actor.SmallImageUrl"/>
                    @actor.FullName
                </td>
                <td scope="row">@(string.Join(", ", actor.MovieTitles))</td>
                <td><a asp-action="Details" asp-route-id="@actor.Id">Details</a></td>

            </tr>
        }

    </tbody>
</table>