@model ActorPageListingViewModel

@{
    ViewData["Title"] = "All Actors";
    int counter = 1;
}
<h2>All Actors</h2>

@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<ul class="pagination">
    <li class="page-item @previousDisabled">
        <a class="page-link" href="/actors?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/actors?page=@i">@i</a></li>
    }

    <li class="page-item @nextDisabled">
        <a class="page-link " href="/actors?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>

<div class="row">
    <table class="table table-striped" border="1">
        <thead class="thead-dark">
            <tr>
                <th width="1%">#</th>
                <th width="28%">Name</th>
                <th width="70%">Movies</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model.Actors)
            {
                <tr>
                    <th>@(counter++)</th>
                    <td>
                        <div>
                            <a asp-action="Details" asp-route-id="@actor.Id" class="text-info">
                                @actor.FullName
                            </a>
                        </div>

                    </td>
                    <td>
                        @foreach (var movie in actor.Movies)
                        {
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"class="text-success">
                                @movie.Title
                            </a>
                            @(movie == actor.Movies.Last() ? "" : " | ")
                        }
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

