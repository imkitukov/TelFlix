@model MovieIndexViewModel


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                ReleaseDate
            </th>
            <th>
                Rating
            </th>
            <th>
                Genres
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    @movie.Title
                </td>
                <td>
                    @movie.ReleaseDate
                </td>
                <td>
                    @movie.Rating
                </td>
                <td>
                    @(string.Join(", ", movie.Genres.Select(g => g.Name)))
                </td>
                <td>
                    @*TODO add movie id*@
                    <a asp-action="Details" asp-route-id="@movie.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
